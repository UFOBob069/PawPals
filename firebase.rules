rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write messages they are part of
    match /messages/{messageId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.from ||
        request.auth.uid == resource.data.to
      );
      allow create: if request.auth != null && (
        request.auth.uid == request.resource.data.from ||
        request.auth.uid == request.resource.data.to
      );
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.from ||
        request.auth.uid == resource.data.to
      );
    }

    // Allow users to read and write their own user profile
    match /users/{userId} {
      allow read: if true;  // Anyone can read user profiles
      allow write: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write job postings
    match /jobs/{jobId} {
      allow read: if true;  // Anyone can read job listings
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
    }
  }
} 